<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigationSearchFragment">

    <fragment
        android:id="@+id/navigationSearchFragment"
        android:name="com.example.messageapp.SearchFragment"
        android:label="Message App"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_navigationSearchFragment_to_phoneNumber"
            app:destination="@id/phoneNumber" />
    </fragment>
    <fragment
        android:id="@+id/phoneNumber"
        android:name="com.example.messageapp.PhoneNumber"
        android:label="Create Account"
        tools:layout="@layout/fragment_phone_number" >

        <action
            android:id="@+id/action_phoneNumber_to_verifying2"
            app:destination="@id/verifying2" />
    </fragment>
    <fragment
        android:id="@+id/verifying2"
        android:name="com.example.messageapp.Verifying"
        android:label="Verification"
        tools:layout="@layout/fragment_verifying" >
        <action
            android:id="@+id/action_verifying2_to_profileInfo"
            app:destination="@id/profileInfo" />
        <action
            android:id="@+id/action_verifying2_to_phoneNumber"
            app:destination="@id/phoneNumber" />
    </fragment>
    <fragment
        android:id="@+id/profileInfo"
        android:name="com.example.messageapp.ProfileInfo"
        android:label="Profile Info"
        tools:layout="@layout/fragment_profile_info" >
        <action
            android:id="@+id/action_profileInfo_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.messageapp.ChatFragment"
        android:label="WhatsApp" >
        <action
            android:id="@+id/action_chatFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_chatFragment_to_linkedFragment"
            app:destination="@id/linkedFragment" />
        <action
            android:id="@+id/action_chatFragment_to_starredFragment"
            app:destination="@id/starredFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.messageapp.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.messageapp.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/linkedFragment"
        android:name="com.example.messageapp.LinkedFragment"
        android:label="fragment_linked"
        tools:layout="@layout/fragment_linked" />
    <fragment
        android:id="@+id/starredFragment"
        android:name="com.example.messageapp.StarredFragment"
        android:label="fragment_starred"
        tools:layout="@layout/fragment_starred" />


</navigation>