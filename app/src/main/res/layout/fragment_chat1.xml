<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VerifiedUser.Chat1Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/display"
                android:text="Display"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageview0"
                android:src="@drawable/ic_baseline_brightness_6_24"
                app:layout_constraintTop_toBottomOf="@id/display"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="17dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview"
                android:text="Themes"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="95dp"
            app:layout_constraintTop_toBottomOf="@id/display"
                app:layout_constraintLeft_toLeftOf="parent"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview1"
                android:text="Light"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="97dp"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageview1"
                android:src="@drawable/ic_baseline_wallpaper_24"
                app:layout_constraintTop_toBottomOf="@id/imageview0"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="18dp"
                android:background="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview2"
                android:text="Wallpaper"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="95dp"
                app:layout_constraintTop_toBottomOf="@id/textview1"
                app:layout_constraintLeft_toLeftOf="parent"

                />


            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:id="@+id/view"
                android:layout_marginTop="10dp"
                android:background="@color/browser_actions_bg_grey"
                app:layout_constraintTop_toBottomOf="@id/imageview1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat"
                android:text="Chat settings"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="false"
                android:text="Enter is send"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="70dp"
                app:layout_constraintTop_toBottomOf="@id/chat"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:gravity="left"/>








        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>