<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VerifiedUser.ContactFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filledTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe your problem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:hintTextColor="@color/black"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/describe"
            android:textAlignment="textStart"
            android:textColorHint="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shots"
        android:text="Add screenshots (optional)"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/filledTextField"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"/>

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imagbtn"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintTop_toBottomOf="@id/shots"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/gainsboro"/>

    <ImageButton
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:id="@+id/imagbtn1"
    android:layout_marginTop="15dp"
    android:src="@drawable/ic_baseline_add_circle_24"
    app:layout_constraintTop_toBottomOf="@id/shots"
    app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    android:background="@color/gainsboro"/>

    <ImageButton
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:id="@+id/imagbtn2"
    android:layout_marginTop="15dp"
        android:layout_marginRight="9dp"
    android:src="@drawable/ic_baseline_add_circle_24"
    app:layout_constraintTop_toBottomOf="@id/shots"
   app:layout_constraintRight_toRightOf="parent"
    android:background="@color/gainsboro"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="NEXT"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/imagbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>