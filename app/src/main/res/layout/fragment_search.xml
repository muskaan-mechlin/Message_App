<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.SearchFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:text="Welcome to WhatsApp"
        android:textColor="@color/green"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/wgatsapp33"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/read"
        android:text="Read our"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/indigo"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="@id/read"
        app:layout_constraintTop_toBottomOf="@id/image"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continu"
        android:text="Tap Agree and continue to accept the"
        android:textStyle="bold|italic"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/textButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service."
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="@color/indigo"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/continu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="AGREE AND CONTINUE"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:textSize="15dp"
        android:paddingVertical="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textButton1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>