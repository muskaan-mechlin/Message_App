<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VerifiedUser.BackupFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagbtn"
                android:src="@drawable/ic_baseline_backup_24"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview"
                android:text="Last Backup"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview1"
                android:text="Backup your messages and media\nto Google Drive.You can restore\nthem when you reinstall\nWhatsApp.Your messages will\nalso backup to your phone's\ninternal storage. "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="85dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:text="BACK UP"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/textview1"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/green"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/view"
                android:background="@color/black"
                android:backgroundTint="@color/silver"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/button"
                app:layout_constraintLeft_toLeftOf="parent"/>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imagbtn1"
                android:src="@drawable/ic_baseline_add_to_drive_24"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview3"
                android:text="Google Drive settings"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview4"
                android:text="Messages and media backed up in\nGoogle Drive are not protected by\nWhatsApp end-to-end encryption. "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview5"
                android:text="Back up to Google Drive"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/textview4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview6"
                android:text="Never"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview7"
                android:text="Google Account"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/textview6"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="85dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview8"
                android:text="None selected"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview9"
                android:text="Back up over"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/textview8"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview10"
                android:text="Wi-Fi only"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/textview9"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="85dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:id="@+id/switchbutton"
                android:text="Include videos"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/textview10"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:ignore="MissingConstraints"
                android:gravity="left"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>